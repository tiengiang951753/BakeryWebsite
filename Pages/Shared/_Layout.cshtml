@using Microsoft.AspNetCore.Http;
@using BakeryProj.Helpers;
@using BakeryProj.Models;
@{
     String user = Context.Session.GetString("username");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Admin Page</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.13.0/css/all.css?fbclid=IwAR01F_gMoo0cJ8tx1eJRC0Tmm14FveeZxwDIB5qu6jEM0aujpeSGKuw9UhM">
    <style>
        .button {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 8px 25px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 5%;
        font-weight: bold;
        }

        .button2 {background-color: #008CBA;} /* Blue */
        .button3 {background-color: #f44336;} /* Red */ 
        .button4 {background-color: yellow;} /* Yellow */ 
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Admin/Index">
                    <img class="img-fluid" src="/images/logo.png" style="width: 50%; height: 50%;" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                            <div class="dropdown ">
                                <a class="nav-link" style="font-weight: bold; color: black" asp-area="Identity" asp-page="/Account/Manage/Index" >Xin chào, @user</a>
                                <div class="dropdown-content">
                                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
                                        <button type="submit" class="dropdown-item" style="font-weight: bold; color: white">Đăng xuất</button>
                                    </form>
                                    <a class="dropdown-item" style="font-weight: bold; color: white" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">Đổi mật khẩu</a>
                                </div>
                            </div> 
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <button class="button"><a class="nav-link text-dark" asp-page="/Admin/CakePage/CakeList">Cake List</a></button>
                        </li>
                        <li class="nav-item">
                            <button class="button button2"><a class="nav-link text-dark" asp-page="/Admin/CustomerPage/Account">Account List</a></button>
                        </li>
                        <li class="nav-item">
                            <button class="button button4"><a class="nav-link text-dark" asp-page="/Admin/CustomerPage/CustomerList">Customer List</a></button>
                        </li>
                         <li class="nav-item">
                            <button class="button button3"><a class="nav-link text-dark" asp-page="/Admin/OrderPage/ListOrder">Order List</a></button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--footer-->
<div class="container-xxl p-0 " style="margin-top: 150px;">
  <div class="row">
    <div class="col footer" style="padding-left: 40px;">
      <img width="200px" height="200px" src="/images/logo.png" >
    </div>
    <div class="col footer" >
      <div class="tieudefooter">THÔNG TIN CỬA HÀNG</div>
      <div>Địa chỉ: 273 An D. Vương, Phường 3, Quận 5, Thành phố Hồ Chí Minh 700000</div>
      
    </div>
    <div class="col footer" >
      <div class="tieudefooter">LIÊN HỆ VỚI CHÚNG TÔI</div>
      <div style="padding-bottom: 2px;">

        <!--Icon điện thoại-->
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-telephone-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M2.267.98a1.636 1.636 0 0 1 2.448.152l1.681 2.162c.309.396.418.913.296 1.4l-.513 2.053a.636.636 0 0 0 .167.604L8.65 9.654a.636.636 0 0 0 .604.167l2.052-.513a1.636 1.636 0 0 1 1.401.296l2.162 1.681c.777.604.849 1.753.153 2.448l-.97.97c-.693.693-1.73.998-2.697.658a17.47 17.47 0 0 1-6.571-4.144A17.47 17.47 0 0 1 .639 4.646c-.34-.967-.035-2.004.658-2.698l.97-.969z"/>
        </svg> (079) 902 8001</div>
        <!--Icon điện thoại-->

      <div style="padding-bottom: 2px;">

        <!--Icon thành phố-->
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cursor-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M14.082 2.182a.5.5 0 0 1 .103.557L8.528 15.467a.5.5 0 0 1-.917-.007L5.57 10.694.803 8.652a.5.5 0 0 1-.006-.916l12.728-5.657a.5.5 0 0 1 .556.103z"/>
        </svg> Hồ Chí Minh</div>
        <!--Icon thành phố-->

      <div style="padding-bottom: 2px;">
       
        <!--Icon gmail-->
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-envelope-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555zM0 4.697v7.104l5.803-3.558L0 4.697zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757zm3.436-.586L16 11.801V4.697l-5.803 3.546z"/>
        </svg> info@kingbakery.gmail.com</div>
        <!--Icon gmail-->

    </div>
    <div class="col footer" >
      <div class="tieudefooter">BẢN ĐỒ</div>
      <div ><iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d3919.6696579353975!2d106.6800696!3d10.7599224!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f1b7c3ed289%3A0xa06651894598e488!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBTw6BpIEfDsm4!5e0!3m2!1svi!2s!4v1603983848863!5m2!1svi!2s" width="250" height="150" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe></div>
    </div>
  </div>
</div>
<!--footer-->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
