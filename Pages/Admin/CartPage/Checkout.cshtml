@page
@using Microsoft.AspNetCore.Http;
@using BakeryProj.Helpers;
@using BakeryProj.Models;
@{
  String user = HttpContext.Session.GetString("username");
  Layout = "_Layout2";
}
<style>
 #login-container{
  justify-content: center;
  align-items: center;
  width: 40%;
  border-radius: 5px;
  margin: center;
  background-color: #99FFFF;
} 
.ask{
  float: none;
}
.modal-content{
  border-radius: 5%;
}
#form-login{
  padding: 40px;
}
label{
  font-weight: bold;
  color: black;
}
</style>
@model BakeryProj.Pages.Admin.CartPage.CheckoutModel
<head>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <title>Thanh toán</title>
</head>
<div class="container" id="login-container">
           <div class="row" id="login-row"> 
                <div class="col-md-12" id="form-login">
                <form class="needs-validation" method="POST">
                    <h2 style="text-align: center;color: black;">Thông tin đặt hàng</h2>
                    <input type="hidden" class="form-control" asp-for="Orderr.ID_Od" >
                    <input type="hidden" class="form-control" asp-for="Orderr.ID_Cs" >
                    <input type="hidden" class="form-control" asp-for="Orderr.Date" >
                <!-- Name -->
                <div class="form-group">
                        <label for="username">UserName</label>
                        <input type="text" asp-for="Orderr.Name_Cs" class="form-control" placeholder="Your Name?" required>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Hãy tên của bạn</div>
                </div> 

                <!-- PhoneNumber -->
                <div class="form-group">
                        <label for="PhoneNumber">PhoneNumber</label>
                        <input type="number" asp-for="Orderr.PhoneNumber" class="form-control" placeholder="Your PhoneNumber?" required>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Hãy nhập số điện thoại của bạn.</div>
                </div>

                <!-- Address -->
                <div class="form-group">
                        <label for="Address">Address</label>
                        <input type="text" asp-for="Orderr.Address" class="form-control" placeholder="Your Address?" required>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Hãy nhập địa chỉ của bạn.</div>
                </div>
                <input type="hidden" class="form-control" asp-for="Orderr.Total_Quantity">
                <input type="hidden" class="form-control" asp-for="Orderr.Total_Price">
                    <!-- Sign in button -->
                    <div class="form-group row">
						      <div class="col-6">
                			<input type="submit" value="Xác nhận mua hàng" class="btn btn-success form-control " >
            			</div>
					</div>              
                </form>
                <!-- Form -->          
</div>


