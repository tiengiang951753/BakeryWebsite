@page
@using Microsoft.AspNetCore.Http;
@using BakeryProj.Helpers;
@using BakeryProj.Models;
@model BakeryProj.Pages.Admin.CakePage.CreateModel
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
@{
    String account = HttpContext.Session.GetString("account");
    @if(account == "Admin")
    {
        Layout = "_Layout";
        <br/>
            <h2 class="text-info">Create New Cake</h2>
            <title>Thêm sản phẩm mới</title>
            <div class="border container" style="padding:30px;">
                <form method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Product.Name"></label>
                        </div>
                        <div class="col-6">
                            <input asp-for="Product.Name" class="form-control" />
                        </div>
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Product.Description"></label>
                        </div>
                        <div class="col-6">
                            <input asp-for="Product.Description" class="form-control" />
                        </div>
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Product.Price"></label>
                        </div>
                        <div class="col-6">
                            <input asp-for="Product.Price" class="form-control" />
                        </div>
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Product.ImageName"></label>
                        </div>
                        <div class="col-6">
                            <input asp-for="Product.ImageName" class="form-control" />
                        </div>
                        <span asp-validation-for="Product.ImageName" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Product.Quantity"></label>
                        </div>
                        <div class="col-6">
                            <input asp-for="Product.Quantity" class="form-control" />
                        </div>
                        <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-3 offset-4">
                            <input type="submit" value="Create" class="btn btn-primary form-control" />
                        </div>
                        <div class="col-3">
                            <a asp-page="/Admin/CakePage/CakeList" class="btn btn-success form-control">Back to Cake List</a>
                        </div>
                    </div>
                </form>
            </div>
    }
    else
    {
        @Html.Partial("_LoginAdminCondition");
    }
}
